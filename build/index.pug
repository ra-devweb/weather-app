doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="css/main.css")
        title Weather Application Web
    body

        section.box-field
            form.box-field__form
                input(type="text" class="box-field__input" id="input-field" placeholder="Search by city")
                input(type="submit" value="Submit" class="box-field__submit")

        section.content

            .container 

                .row
                    .one-half.column
                        .content__head
                            span#location
                            img#icon
                            span#desc
                            span#string
                    .one-half.column
                        .content__footer
                            ul
                                li#humidity
                                li#feels-like
                                li#dewpoint
                                li#wind
                                li#clouds

        .icon-vase
            img(src="img/icon-vase.svg", alt="vase")


        script(src="js/main.js")